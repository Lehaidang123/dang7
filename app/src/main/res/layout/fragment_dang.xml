<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.dangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li"

        android:layout_height="wrap_content"
        android:background="@color/aqua">
        <TextView
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/muiten"
            android:drawablePadding="75dp"
            android:layout_margin="10dp"
            android:text="Đăng tin rao bán"

            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_marginTop="35dp"

        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:scaleType="centerCrop"
            android:id="@+id/foodImage"
            android:src="@drawable/idex"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sản phẩm"
            android:textSize="19sp"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"
            android:id="@+id/tensp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/gia"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp"
            android:id="@+id/mota"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"

            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/spinnertinhtrang"

            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/khhuvuc"

            />

            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đăng tin"
            android:layout_marginTop="30dp"
            android:textSize="22sp"
            android:backgroundTint="@color/black"
            android:textColor="#ffffff"
           android:id="@+id/dangtin"
            />


    </LinearLayout>


</FrameLayout>
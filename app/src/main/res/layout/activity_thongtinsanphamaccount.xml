<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thongtinsanphamaccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li"

        android:layout_height="wrap_content"
        android:background="@color/aqua">
        <TextView
            android:id="@+id/txtttac"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/nguoidung"
            android:drawablePadding="30dp"
            android:layout_margin="10dp"
            android:text="Quản lí sản phẩm?"

            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/f"
        android:text="Sản phẩm đang bán"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_baseline_local_mall_24"
        android:drawablePadding="5dp"
        android:layout_below="@id/li"
        ></TextView>

    <GridView
        android:id="@+id/grid_thongtinaccount"
        android:layout_below="@+id/f"
        android:padding="10dp"
        android:background="#f0f8ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:numColumns="2"
        />

</RelativeLayout>
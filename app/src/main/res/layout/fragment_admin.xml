<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper1"

    >

    <RelativeLayout
        android:id="@+id/rlttcn"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:padding="20dp">

        <TextView
            android:id="@+id/txtuser"
            android:layout_width="wrap_content"
            android:text="Thông tin người dùng"
            android:textSize="25sp"

            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:text="Tên"

            android:textSize="20sp"
            android:textStyle="bold" />




    </RelativeLayout>

    <TextView
        android:id="@+id/qlspadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:drawableRight="@drawable/lon"
        android:text="Quản lý sản phẩm người dùng"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtQLTK"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:drawableRight="@drawable/lon"
        android:text="Quản lý tài khoản người dùng"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtdoimk"
        android:layout_width="match_parent"
        android:drawableRight="@drawable/lon"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Đổi mật khẩu"

        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Admin"
        android:drawableRight="@drawable/lon"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
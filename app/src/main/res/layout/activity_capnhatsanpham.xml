<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.dangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/capnhathinh"
            android:src="@drawable/idex"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sản phẩm"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/captensp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/capnhatgia"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/capnahtmota"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnercapnhatdanhmuc"

            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/capnhatspinnertinhtrang"

            />

        />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cập nhật "

            android:layout_marginTop="30dp"
            android:textSize="22sp"
            android:backgroundTint="@color/black"
            android:textColor="#ffffff"
            android:id="@+id/btncapnhatsp"
            tools:ignore="OnClick" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Xóa "

            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:backgroundTint="@color/black"
            android:textColor="#ffffff"
            android:id="@+id/btnxoa"
            android:onClick="xoasanpham"
            tools:ignore="OnClick" />


    </LinearLayout>


</FrameLayout>
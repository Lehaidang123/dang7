<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/wallpaper3"

    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hỗ Trợ"
    android:id="@+id/hotro"
    android:textSize="16sp"
    android:textColor="#776E26"
    android:layout_marginLeft="28dp"
    />
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999"
        app:srcCompat="@mipmap/ic_launcher" />
    <RelativeLayout
        android:id="@+id/rlttcn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 android:background="@color/white"

        android:padding="20dp">

        <TextView
            android:id="@+id/txtuser"
            android:layout_width="wrap_content"
           android:text="Thông tin người dùng"
            android:textSize="25sp"

            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txthoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:text="Họ và Tên"

            android:textSize="20sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/txtsodienthoai"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_below="@+id/txthoten"

            android:layout_marginTop="30dp"

            android:text="Số Điện Thoại"
            android:textSize="15sp" />

        <TextView

            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_below="@+id/txthoten"

            android:layout_marginTop="10dp"

            android:layout_alignBottom="@+id/txtsodienthoai"
            android:text="Số Điện Thoại"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtQLsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:drawableRight="@drawable/lon"
        android:text="Quản lý sản phẩm"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtQLTK"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:drawableRight="@drawable/lon"
        android:text="Quản lý tài khoản người dùng"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtdoimk"
        android:layout_width="match_parent"
        android:drawableRight="@drawable/lon"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Đổi mật khẩu"

        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Đăng xuất"
        android:drawableRight="@drawable/lon"
        android:textSize="20sp"
        android:textStyle="bold" />



</LinearLayout>